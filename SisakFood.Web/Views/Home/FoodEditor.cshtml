@model SisakFood.Data.Models.Food;

<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" id="name" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="protein">Protein</label>
        <input class="form-control" type="text" id="protein" asp-for="Nutrients.Protein" />
    </div>
    <div class="form-group">
        <label for="carbohydrates">Carbohydrates</label>
        <input class="form-control" type="text" id="carbohydrates" asp-for="Nutrients.Carbohydrates" />
    </div>
    <div class="form-group">
        <label for="fat">Fat</label>
        <input class="form-control" type="text" id="fat" asp-for="Nutrients.Fat" />
    </div>
    <div class="form-group">
        <label for="alcohol">Alcohol</label>
        <input class="form-control" type="text" id="alcohol" asp-for="Nutrients.Alcohol" />
    </div>
    <div class="form-group">
        <label for="quantities">Quantities</label>
        <input class="form-control" type="text" id="quantities" asp-for="Quantities" />
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
</form>